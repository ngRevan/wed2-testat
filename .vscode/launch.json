  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "args": [
        "--experimental-modules",
        "--es-module-specifier-resolution=node",
        "./dist/bin/www.js"
      ],
      "env": {
        "DEBUG": "wed2-testat:*",
        "NODE_ENV": "development"
      },
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}
